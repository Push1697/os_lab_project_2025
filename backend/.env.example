# Server Configuration
PORT=5000
NODE_ENV=production
BASE_URL=https://your-backend-app.onrender.com

# Database (Use MongoDB Atlas for production)
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/id_verification

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_characters
JWT_EXPIRES_IN=8h

# CORS Configuration (Add your Firebase hosting URLs)
CORS_ORIGINS=https://your-project-id.web.app,https://your-project-id.firebaseapp.com,http://localhost:3000,http://localhost:5173

# AWS S3 Configuration (Optional - if not provided, files will be stored locally)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET=your-s3-bucket-name
AWS_REGION=us-east-1

# Admin Seed Configuration
SEED_ADMIN_EMAIL=super@nextcoreai.com
SEED_ADMIN_PASS=SuperPass123!

# Rate Limiting
VERIFY_RATE_LIMIT=60
AUTH_RATE_LIMIT=5

# File Upload Limits
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Logging
LOG_LEVEL=info